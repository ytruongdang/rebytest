<tr>
  <td><%= booking.tour_date.tour.name %></td>
  <td><%= booking.tour_date.start_date %></td>
  <td><%= pluralize booking.tour_date.tour.duration, t(".day") %></td>
  <td><%= booking.num_tourist %></td>
  <td><%= booking.total_price %></td>
  <td><p class="status_<%= booking.status %> cancelling">
    <%= booking.status %></p>
    <% if booking.is_cancel? %>
      <p class="status_cancel cancelling"><%= t ".cancelling" %></p>
    <% end %>
  </td>
  <td><%= l booking.created_at %></td>
  <td>
    <%= link_to t(".view"), booking_path(booking),
      class: "btn btn-info" %>
  </td>
</tr>
