<% provide :title, t(".title") %>

<div class="box-header">
  <h1><%= t ".title" %></h1>
</div>
<div class="box-body">
  <div class="row margin-bottom-10">
    <div class="col-md-3">
      <%= link_to t(".add_user"), new_admin_user_path,
        class: "btn btn-primary button-add" %>
    </div>
    <div class="col-md-9 text-right">
      <%= render "search_form" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover table-responsive table-striped
        table-bordered">
        <thead>
          <tr>
            <th><%= t ".avatar" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".email" %></th>
            <th><%= t ".phone" %></th>
            <th><%= t ".address" %></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @users %>
        </tbody>
      </table>
    </div>
    <div class="col-md-12 text-center">
      <%= will_paginate %>
    </div>
  </div>
</div>
