<tr>
  <td class="user-avatar"><%= gravatar_for user, "user-image" %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.phone %></td>
  <td><%= user.address %></td>
  <td>
    <%= link_to t(".edit"), edit_admin_user_path(user),
      class: "btn btn-info" %>
  </td>
  <td>
    <%= link_to t("delete"), admin_user_path(user), class: "btn btn-danger",
      method: :delete, data: {confirm: t("data.confirm")} %>
  </td>
</tr>
