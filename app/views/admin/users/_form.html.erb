<%= form_for @user, url: yield(:url_path) do |f| %>
  <div class="form-group">
    <%= render "shared/error_messages", object: f.object %>
  </div>
  <% unless f.object.is_admin? %>
    <div class="form-group">
      <%= f.label t("admin.users.index.name") %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label t("admin.users.index.email") %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label t("admin.users.index.phone") %>
      <%= f.text_field :phone, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label t("admin.users.index.address") %>
      <%= f.text_field :address, class: "form-control" %>
    </div>
  <% end %>
  <% if f.object.new_record? || f.object.is_admin? %>
    <div class="form-group">
      <%= f.label t("admin.users.new.password") %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label t("admin.users.new.password_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  <% end %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
