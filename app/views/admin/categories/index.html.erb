<% provide :title, t(".title") %>

<div class="box-header">
  <h1><%= t ".title" %></h1>
</div>
<div class="box-body">
  <div class="row margin-bottom-10">
    <div class="col-md-3">
      <%= link_to t(".add_new"), new_admin_category_path,
        class: "btn btn-primary button-add", "data-toggle": "modal",
        "data-target": "#add_new_category" %>
    </div>
    <div class="col-md-9 text-right">
      <%= render "search_form" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover table-responsive
        table-bordered table-category">
        <thead>
          <tr>
            <th></th>
            <th><%= t ".name" %></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= categories_tree_for @categories %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="modal fade" id="add_new_category" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;
        </button>
        <h4 class="modal-title"><%= t ".new_category" %></h4>
      </div>
      <div class="modal-body">
        <%= render "form", form_object: @supports.category %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t ".close" %>
        </button>
      </div>
    </div>
  </div>
</div>
