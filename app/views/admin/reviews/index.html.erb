<% provide :title, t(".title") %>

<div class="box-header">
  <h1><%= t ".title" %></h1>
</div>
<div class="box-body">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover table-responsive table-striped
        table-bordered">
        <thead>
          <tr>
            <th><%= t ".review_title" %></th>
            <th><%= t ".user" %></th>
            <th><%= t ".tour" %></th>
            <th><%= t ".rating" %></th>
            <th><%= t ".type" %></th>
            <th><%= t ".created_at" %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @reviews %>
        </tbody>
      </table>
    </div>
    <div class="col-md-12 text-center">
      <%= will_paginate %>
    </div>
  </div>
</div>
