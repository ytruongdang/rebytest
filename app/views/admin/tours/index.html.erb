<% provide :title, t(".title") %>

<div class="box-header">
  <h1><%= t ".title" %></h1>
</div>
<div class="box-body">
  <div class="row margin-bottom-10">
    <div class="col-md-4">
      <%= link_to t(".add_tour"), new_admin_tour_path,
        class: "btn btn-primary button-add" %>
      <%= button_tag t(".filter_tour"), class: "btn btn-warning button-add",
        data: {toggle: "collapse", target: "#filter-form"} %>
    </div>
    <div class="col-md-8 text-right">
      <%= render "search_form" %>
    </div>
  </div>
  <div class="row collapse" id="filter-form">
    <%= render "filter_form" %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover table-responsive table-striped
        table-bordered table-tours">
        <thead>
          <tr>
            <th></th>
            <th><%= t ".name" %></th>
            <th><%= t ".price" %></th>
            <th><%= t ".num_people" %></th>
            <th><%= t ".duration" %></th>
            <th><%= t ".discount" %></th>
            <th><%= t ".status" %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @tours %>
        </tbody>
      </table>
    </div>
    <div class="col-md-12 text-center">
      <%= will_paginate %>
    </div>
  </div>
</div>
