<%= form_tag admin_tours_path, method: :get, class: "form-inline" do %>
  <div class="form-group">
    <div class="form-group">
      <%= select_tag :status_eq,
        options_for_select(@supports.statuses, params[:status_eq]),
        {include_blank: t(".select_status"),
        class: "form-control"} %>
    </div>
    <div class="input-group">
      <%= text_field_tag :name_or_category_name_or_places_name_cont,
        params[:name_or_category_name_or_places_name_cont],
        class: "form-control", placeholder: t(".enter_keyword") %>
      <span class="input-group-btn">
        <%= button_tag type: :submit, class: "btn btn-default" do %>
          <i class="fa fa-search"></i>
        <% end %>
      </span>
    </div>
  </div>
<% end %>
